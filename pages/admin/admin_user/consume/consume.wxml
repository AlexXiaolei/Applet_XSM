<form bindsubmit="BindSave">
  <view class="consume-main">
    <view>
      <view style="width:25%;">
        <text>客户:</text>
      </view>
      <view style="width:65%;">
        <text>{{userInfo.UserName==''?userInfo.NickName:userInfo.UserName}}</text>
        <input name="UserID" value="{{userInfo.ID}}" style="display:none;"/>
      </view>
    </view>
    <view>
      <view style="width:25%;">
        <text>消费项目:</text>
      </view>
      <view style="width:65%;">
        <input type="text" name="OpType" placeholder="消费项目" />
      </view>
    </view>
    <view>
      <view style="width:25%;">
        <text>消费数量:</text>
      </view>
      <view style="width:65%;">
        <input type="text" name="OpCount" placeholder="消费数量" />
      </view>
    </view>
    <view>
      <view style="width:25%;">
        <text>消费单位:</text>
      </view>
      <view style="width:65%;">
        <input type="text" name="OpUnit" placeholder="消费单位" />
      </view>
    </view>
    <view>
      <view style="width:25%;">
        <text>消费备注:</text>
      </view>
      <view style="width:65%;">
        <textarea style="height:60px;" name="Remark" placeholder="消费备注" />
      </view>
    </view>
  </view>
  <view>
    <view style="width:100%;margin:10px 0 20px 20px">
      <text>消费时间:</text>
    </view>
  </view>
  <view style="width: 100%;text-align: center;">
    <picker-view style="width: 100%; height: 100px;" name="OpTime" value="{{time}}" bindchange="bindChange">
      <picker-view-column>
        <view wx:for="{{years}}">{{item}}年</view>
      </picker-view-column>
      <picker-view-column>
        <view wx:for="{{months}}">{{item}}月</view>
      </picker-view-column>
      <picker-view-column>
        <view wx:for="{{days}}">{{item}}日</view>
      </picker-view-column>
    </picker-view>
  </view>
  <input type="text" name="TimeValue" style="display:none;" value="{{time}}"/>
  <view>
    <button form-type="submit">保存</button>
  </view>
</form>