<view wx:if="{{userInfo.Role==1}}">
  <view class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.AvatarUrl}}" background-size="cover"></image>
    <text>{{userInfo.UserName==''?userInfo.NickName:userInfo.UserName}}</text>
  </view>
  <view class="admin">
    <button>客户资料管理</button>
    <button>消费明细管理</button>
    <button bindtap="bindStore">门店信息管理</button>
  </view>
</view>
<view class="sorry" wx:else><text>对不起，此功能仅员工可见</text></view>