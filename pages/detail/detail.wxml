<view>
  <view wx:for="{{item_list}}">
    <view class="weui-cells__title" style="background: #ffffff;" data-id="{{item.ID}}">
      <view>
        <view style="width:28%;float:left;">
          <text>消费项目：</text>
        </view>
        <view style="width:60%;">{{item.OpType}}</view>
      </view>
      <view>
        <view style="width:28%;float:left;">
          <text>消费数量：</text>
        </view>
        <view style="width:60%;">{{item.OpCount}}{{item.OpUnit}}</view>
      </view>
      
      <view>
        <view style="width:28%;float:left;">
          <text>消费时间：</text>
        </view>
        <view style="width:60%;">{{item.OpTime}}</view>
      </view>
    </view>
  </view>
</view>